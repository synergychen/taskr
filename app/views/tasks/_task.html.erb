<li id="<%= dom_id(task) %>">
<%= task.title %> -- <%= task.description %> --

<%= form_for task do |form| %>
  <% if task.completion == true %>
    <%= form.hidden_field :completion, value: 0 %>
    <%= form.submit "Un-check" %>
  <% else %>
    <%= form.hidden_field :completion, value: 1 %>
    <%= form.submit "Check" %>
  <% end %>
<% end %>


<%= button_to "Delete", task_path(task), class: "delete-task", method: :delete %>
</li>
